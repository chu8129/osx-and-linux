mkfs.ext4 /dev/sda
mount /dev/sda /mnt
vim /etc/pacman.d/mirrolist
pacstrap /mnt base base-devel
genfstab -U /mnt >> /mnt/etc/fstab
arch-chroot /mnt /bin/bash

grub-install /dev/sda 
grub-mkconfig -o /boot/grub/grub.cfg

pacman -S syslinux
syslinux-install_update -i -a -m
# 启动缺引导的话是pacman -S linux
# 缺preset 是mkinitcpio -p linux

nano /boot/syslinux/syslinux.cfg

useradd -m -g users -G wheel -s /bin/bash ar
passwd ar

exit
umount -R /mnt
reboot

pacman -S install xorg xorg-xinit
pacman -S awesome
cp /etc/X11/xinit/xinitrc ~/.xinitrc
echo "exec awesome" >> ~/.xinirc

nano /etc/locale.gen
locale-gen    

echo LANG=zh_CN.UTF-8  > /etc/locale.conf
ln -s /usr/share/zoneinfo/Asia/Shanghai /etc/localtime

hwclock --systohc --utc #or localtime

echo ar > /etc/hostname

systemctl start sshd.service

systemctl start dhcpcd
systemctl enable dhcpcd


